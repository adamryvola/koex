{
  "name": "koex",
  "version": "0.0.1",
  "description": "Base entity management framework.",
  "main": "src/index.js",
  "scripts": {
    "docs": "node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "test": "better-npm-run test",
    "prepublish": "npm run docs && npm run test && mv coverage docs/coverage",
    "dev": "better-npm-run dev",
    "eslint": "./node_modules/.bin/eslint src",
    "refresh": "better-npm-run refresh"
  },
  "betterScripts": {
    "test": {
      "command": "nyc --reporter=html mocha --recursive --reporter mochawesome --reporter-options reportDir=./docs/test,reportFilename=index,reportTitle=KOEX.JS,inlineAssets=true",
      "env": {
        "NODE_ENV": "test",
        "PORT": 3000,
        "DEBUG": ""
      }
    },
    "dev": {
      "command": "node src/bin/server",
      "env": {
        "NODE_ENV": "test",
        "PORT": 3000,
        "DEBUG": "*"
      }
    },
    "refresh": {
      "command": "knex migrate:rollback && knex migrate:latest",
      "env": {
        "NODE_ENV": "test",
        "PORT": 3000
      }
    }
  },
  "keywords": [
    "framework",
    "database",
    "entity",
    "routing"
  ],
  "author": "Adam Ryvola <ryvolaadam@gmail.com> (http://www.adane.cz)",
  "license": "ISC",
  "dependencies": {
    "debug": "^3.0.1",
    "express": "^4.15.4",
    "knex": "^0.14.3",
    "lodash": "^4.17.4",
    "objection": "^0.8.8",
    "pg": "^7.3.0",
    "qs": "^6.5.1"
  },
  "devDependencies": {
    "body-parser": "^1.17.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cookie-parser": "^1.4.3",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.4",
    "knex-logger": "^0.1.0",
    "minami": "^1.2.3",
    "mocha": "^3.5.0",
    "mochawesome": "^2.3.0",
    "nyc": "^11.2.1"
  }
}
